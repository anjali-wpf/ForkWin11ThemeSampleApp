<Window x:Class="Win11ThemeSampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Win11ThemeSampleApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Demo label" Height="30" Width="100" IsEnabled="False" >
                <Label.ToolTip>
                    <ToolTip>
                        <TextBlock>
                            Demo help text
                        </TextBlock>
                    </ToolTip>
                </Label.ToolTip>
            </Label>
            
            <Button Content="Click Me" Appearance="Light"/>
            <CheckBox Content="Test Checkbox"/>
            <RadioButton>Hello World</RadioButton>
        </StackPanel>
    </Grid>
</Window>
